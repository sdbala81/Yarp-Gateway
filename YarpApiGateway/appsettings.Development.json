{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "StudentService": {
        "ClusterId": "studentsservice",
        "Match": {
          "Path": "/students"
        }
      },
      "CourseService": {
        "ClusterId": "coursesservice",
        "Match": {
          "Path": "/courses"
        }
      }
    },
    "Clusters": {
      "studentsservice": {
        "Destinations": {
          "studentsservice-1": {
            "Address": "http://localhost:8000/"
          }
        },
        "coursesservice": {
          "Destinations": {
            "coursesservice-1": {
              "Address": "http://localhost:6000/"
            }
          }
        }
      }
    }
  }
}